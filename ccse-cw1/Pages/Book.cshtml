@page
@model ccse_cw1.Pages.BookModel
@{
}
<div class="container mt-5">
    <h3 class="mb-2">Booking System</h3>

    <form id="searchForm" class="mt-3">
        <div class="form-group">
            <label for="searchType">Search Type:</label>
            <select class="form-control" id="searchType" name="searchType">
                <option value="allHotels">All Hotels</option>
                <option value="specificDates">Specific Dates</option>
            </select>
        </div>

        <div id="dateInput" style="display:none;" class="mt-3">
            <div class="form-group">
                <label for="startDate">Checkin Date:</label>
                <div>
                    <input type="date" class="form-control" id="startDate" name="Checkin Date">
                </div>
            </div>
            <div class="form-group">
                <label for="endDate">Checkout Date:</label>
                <div>
                    <input type="date" class="form-control" id="endDate" name="Checkout Date">
                </div>
            </div>
        </div>

        <button type="button" class="btn btn-primary mt-3 mb-3" onclick="">Search</button>
    </form>

    <div id="searchResults" class="mt-4">
        <ul>
            @foreach (var hotel in Model.hotels)
            {
                <li>
                    Hotel ID: @hotel.Id <br />
                    Hotel Name: @hotel.Name <br />
                </li>
            }
        </ul>
    </div>

    <div id="reservationForm"  class="mt-4">
        <h2>Make a Reservation</h2>
        <form id="bookingForm">
            <div class="form-group">
                <label for="numberOfRooms">Number of Rooms:</label>
                <input type="number" class="form-control" id="numberOfRooms" name="numberOfRooms" min="1" value="1">
            </div>

            <button type="button" class="btn btn-success" onclick="">Book Now</button>
        </form>
    </div>
</div>

<script>
    document.getElementById('searchType').addEventListener('change', function () {
        var dateInput = document.getElementById('dateInput');
        if (this.value === 'specificDates') {
            dateInput.style.display = 'block';
        } else {
            dateInput.style.display = 'none';
        }
    });
</script>